<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/activitybackground"
    tools:context=".Activity.AddBeneficiaryActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/appbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <ImageView
            android:id="@+id/back_activity_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/rof_backbutton"
            android:textStyle="bold"
            android:tint="@color/white"
            android:onClick="onClickBackButton"

            />

        <LinearLayout
            android:id="@+id/saveshipmenticonintop"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/appbar"
            android:orientation="vertical"
            android:padding="@dimen/pin_content_layout_padding">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0dp"
                android:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_benifitial"
            style="@style/ActionBarTitleTextStyle"
            />
    </androidx.appcompat.widget.Toolbar>
<ScrollView
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="24dp"
   android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name *"
            style="@style/commonEdittextStyle"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:singleLine="true"
                android:id="@+id/fullName"
                android:maxLength="75"
                android:inputType="textCapWords"
                android:text=""
                android:maxLines="1"
                android:digits="@string/NameDigits"
                style="@style/commonEdittextStyle"
                android:textIsSelectable="true" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number *"
            style="@style/commonEdittextStyle"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:singleLine="true"
                android:id="@+id/accountNumber"
                android:maxLength="75"
                android:inputType="textCapWords"
                android:text=""
                android:maxLines="1"
                android:digits="@string/NumberDigits"
                style="@style/commonEdittextStyle"
                android:textIsSelectable="true" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Account Number *"
            style="@style/commonEdittextStyle"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:singleLine="true"
                android:id="@+id/confirmAC"
                android:maxLength="75"
                android:inputType="textCapWords"
                android:text=""
                android:maxLines="1"
                android:digits="@string/NumberDigits"
                style="@style/commonEdittextStyle"
                android:textIsSelectable="true" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beneficiary's Mobile Number *"
            style="@style/commonEdittextStyle"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:singleLine="true"
                android:id="@+id/beneficiaryPhone"
                android:maxLength="75"
                android:inputType="textCapWords"
                android:text=""
                android:maxLines="1"
                android:digits="@string/NumberDigits"
                style="@style/commonEdittextStyle"
                android:textIsSelectable="true" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IFSC Code *"
            style="@style/commonEdittextStyle"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:singleLine="true"
                android:id="@+id/ifscCode"
                android:maxLength="75"
                android:inputType="textCapWords"
                android:text=""
                android:maxLines="1"
                style="@style/commonEdittextStyle"
                android:textIsSelectable="true" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
         android:layout_marginTop="20dp"
         android:layout_marginBottom="30dp"
         android:orientation="vertical"

         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <Button
             android:id="@+id/addBeneficiary"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/cornerbutton"
             android:backgroundTint="@color/appbar"
             android:foregroundGravity="center_horizontal"
             android:gravity="center"
             android:layout_gravity="center_horizontal"
             android:padding="-4dp"
             android:text="Add"
             android:textColor="@color/white" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>
