<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bottom_line"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/menulayout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"

            android:src="@drawable/autodebitlogo"

            android:textAlignment="viewStart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical"
            android:textAlignment="textEnd">

            <ImageView
                android:id="@+id/closemenuactivity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/poppinsextrabold"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:src="@drawable/paynimo_cancel_icon" />

            <TextView
                android:id="@+id/logoutbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="bottom"
                android:text="Logout"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_line"
                android:padding="10dp"
                android:text="Profile"
                android:textColor="@drawable/slidemenutextcolor" />

            <TextView
                android:id="@+id/faqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_line"
                android:padding="10dp"
                android:text="FAQs"
                android:textColor="@drawable/slidemenutextcolor" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_line"
                android:padding="10dp"
                android:text="@string/tram_and_condition"
                android:textColor="@drawable/slidemenutextcolor" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_line"
                android:padding="10dp"
                android:text="ContactUs"
                android:textColor="@drawable/slidemenutextcolor" />


            <TextView
                android:id="@+id/revoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_line"
                android:padding="10dp"
                android:text="Revoke Utility Services"
                android:textColor="@drawable/slidemenutextcolor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/app_Version_Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>