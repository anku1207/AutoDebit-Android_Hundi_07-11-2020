<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:a6tndroid="http://schemas.android.com/tools"
    android:background="@color/activitybackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="-8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dynamicHeader">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:id="@+id/tvService"
            android:layout_margin="8dp"
            style="@style/confirmation_dialog_filed"
            />
                <LinearLayout

                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/loadimage"
                    android:background="@drawable/circle_shape"
                    android:padding="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ivOperator"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/dynamicList"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:padding="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/confirmation_dialog_filed"
                android:text=""
                android:id="@+id/tvHMAndateType"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/text_background"

                android:id="@+id/tvMandateType"/>
            <TextView
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/confirmation_dialog_filed"
                android:text=""
                android:id="@+id/tvHMandateTypeNumber"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/text_background"
                android:id="@+id/tvMandateTypeNumber"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/confirmation_dialog_filed"
            android:text="Amount"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/text_background"
            android:id="@+id/tvamount"/>
        <TextView
            android:layout_marginVertical="4dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/confirmation_dialog_filed"
            android:text="Created On"
            />
            <TextView
                android:padding="8dp"
                android:background="@drawable/text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCreatedAT"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/confirmation_dialog_filed"
            android:text="Last Executed On"
            />
            <TextView
                android:padding="8dp"
                android:background="@drawable/text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvlastUpdateDate"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/confirmation_dialog_filed"
            android:text="Payment Bill Cycle in Days"
            />
            <TextView
                android:padding="8dp"
                android:background="@drawable/text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvpaymnetScheduleDays"/>
        </LinearLayout>
        <LinearLayout
            android:requiresFadingEdge="vertical"
            android:weightSum="1"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/revokeMandate"
                android:layout_marginVertical="@dimen/activity_horizontal_margin"
                android:layout_marginHorizontal="48dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="normal"
                android:background="@drawable/button_selector_blue_dark"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/changeMandate"
                android:layout_marginVertical="@dimen/activity_horizontal_margin"
                android:layout_marginHorizontal="48dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:background="@drawable/button_selector_blue_dark"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>